{
  "dashboard": {
    "title": "Proxilion MCP Security Gateway - Analyzer Performance",
    "tags": ["proxilion", "security", "analyzers"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Analyzer Invocations",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum by (analyzer) (rate(proxilion_analyzer_invocations_total[5m]))",
            "legendFormat": "{{analyzer}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Analyzer Execution Duration (P95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (analyzer, le) (rate(proxilion_analyzer_duration_seconds_bucket[5m])))",
            "legendFormat": "{{analyzer}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Average Threat Scores by Analyzer",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "avg by (analyzer) (proxilion_analyzer_scores)",
            "legendFormat": "{{analyzer}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Analyzer Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "sum by (analyzer) (rate(proxilion_analyzer_errors_total[5m]))",
            "legendFormat": "{{analyzer}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Pattern Detection Frequency",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "topk(20, sum by (pattern_type) (proxilion_patterns_detected_total))",
            "format": "table"
          }
        ]
      }
    ],
    "refresh": "10s",
    "time": {"from": "now-6h", "to": "now"}
  }
}
